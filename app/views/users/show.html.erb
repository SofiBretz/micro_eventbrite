<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h3>
    </section>
  </aside>

  <aside class="col-md-6">
    <section class="user_info">
      <% if @user.events.any? %>
        <h3>Submitted (<%= @user.events.count %>) events</h3>
      <% end %>
    </section>

    <section class="user_info">
      <h2>Upcoming Events</h2>
        <ul class="media-list">
          <%= upcoming(@user) %>
        </ul>
    </section>

    <section class="user_info">
    <h2>Past Events</h2>
        <ul class="media-list">
        <%= past(@user) %>
        </ul>
    </section>
  </aside>
</div>
