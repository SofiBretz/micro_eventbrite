<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h3>
    </section>
  </aside>
  <aside class="col-md-6">
    <section class="user_info">
      <% if @user.events.any? %>
          <h3>Submitted (<%= @user.events.count %>) events</h3>
          <ul class="media-list">
            <%= render @events %>
          </ul>
          <%= will_paginate @events %>
        <% else %>
          <h3>No Events Found</h3>
        <% end %>
    </section>
  </aside>
</div>
